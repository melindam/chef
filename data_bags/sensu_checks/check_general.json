{
	"id": "check_general",
	"checks": [
		{"name": "cron_check",
		 "handlers": ["mailer"],
      	 "command": "/opt/sensu/embedded/bin/ruby /etc/sensu/plugins/check-procs.rb -p crond -C 1 -w 5 -c 10",
      	 "interval": 60,
      	 "subscribers": [ "base" ]},
		{"name": "chef-client_check",
		 "handlers": ["mailer"],
      	 "command": "/opt/sensu/embedded/bin/ruby /etc/sensu/plugins/check-procs.rb -p chef-client -w 5 -c 10",
      	 "interval": 60,
      	 "subscribers": [ "base" ]},
       	{"name": "postfix_check",
      	 "handlers": ["mailer"],
      	 "command": "/opt/sensu/embedded/bin/ruby /etc/sensu/plugins/check-procs.rb -p postfix -C 1 -w 5 -c 10",
      	 "interval": 60,
      	 "subscribers": [ "base" ]},
    	{"name": "mysql_check",
    	"handlers": ["mailer"],
    	"command": "/opt/sensu/embedded/bin/ruby /etc/sensu/plugins/check-procs.rb -p mysqld -C 1 -c 15 -w 5 -W 1",
    	"interval": 60,
    	"subscribers": ["mysql"] },
    	{"name": "disk_check",
    	"handlers": ["mailer"],
    	"command": "/opt/sensu/embedded/bin/ruby /etc/sensu/plugins/check-disk.rb -w ${DISK_WARNING} -c ${DISK_CRITICAL} -x cifs",
    	"interval": 60,
    	"subscribers": ["base"] },
		{"name": "activemq_check",
    	  "handlers": ["mailer"],
    	  "command": "/opt/sensu/embedded/bin/ruby /etc/sensu/plugins/check-procs.rb -p activemq -C 1 -c 8 -w 4 -W 1",
    	  "interval": 60,
    	  "subscribers": [ "activemq" ]	},
		{"name": "slapd_check",
    	  "handlers": ["mailer"],
    	  "command": "/opt/sensu/embedded/bin/ruby /etc/sensu/plugins/check-procs.rb -p slapd -C 1 -w 3",
    	  "interval": 60,
    	  "subscribers": [ "slapd" ] },
    	{"name": "mysql_processlist_check",
		 "handlers": ["mailer"],
      	 "command": "/opt/sensu/embedded/bin/ruby /etc/sensu/plugins/check_mysql_processlist.rb -m 120",
      	 "interval": 60,
      	 "subscribers": [ "mysql" ]},
		{"name": "mongodb",
		 "handlers": ["mailer"],
		 "command": "/opt/sensu/embedded/bin/ruby /etc/sensu/plugins/check-procs.rb -p \/bin\/mongod -C 1 -c 5 -w 3",
		 "interval": 60,
		 "subscribers": [ "mongodb" ] }
	]
}
