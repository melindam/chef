{
  "id": "RESTCROWD", 
  "name": "Rest Crowd",
  "pluginDescriptorRef": {
    "id": "com.pingidentity.passwordcredentialvalidator.rest.RESTPasswordCredentialValidator",
    "location": "https://<%= @server_hostname %>:9999/pf-admin-api/v1/passwordCredentialValidators/descriptors/com.pingidentity.passwordcredentialvalidator.rest.RESTPasswordCredentialValidator"
  },
  "configuration": {
    "tables": [
      {
        "name": "HTTP Headers",
        "rows": [
          {
            "fields": [
              {
                "name": "HTTP Header Name",
                "value": "Content-Type"
              },
              {
                "name": "HTTP Header Value",
                "value": "application/json"
              }
            ]
          },
          {
            "fields": [
              {
                "name": "HTTP Header Name",
                "value": "Authorization"
              },
              {
                "name": "HTTP Header Value",
                "value": "Basic <%= @basic_auth %>"
              }
            ]
          }
        ]
      }
    ],
    "fields": [
      {
        "name": "REST Web Service URL",
        "value": "https://<%= @api_server_name %>/profile-api/profile/identity/authenticate"
      },
      {
        "name": "REST Method",
        "value": "POST"
      },
      {
        "name": "HTTP Body",
        "value": "{ \"username\" : \"${username}\", \"password\" : \"${password}\" }"
      },
      {
        "name": "Success Response Type",
        "value": "HTTP Response Code"
      },
      {
        "name": "Success Response Value",
        "value": "200"
      },
      {
        "name": "Response JSON Object Name",
        "value": ""
      }
    ]
  },
  "attributeContract": {
    "coreAttributes": [
      {
        "name": "username"
      }
    ],
    "extendedAttributes": [
      {
        "name": "firstName"
      },
      {
        "name": "lastName"
      },
      {
        "name": "profileId"
      },
      {
        "name": "token"
      }
    ]
  }
}