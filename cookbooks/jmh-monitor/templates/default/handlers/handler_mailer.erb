{
	"handlers":{
		"mailer": {
			"type": "pipe",
			"command": "<%= @ruby_binary %> <%= @ruby_gems_dir %>/sensu-plugins-mailer-<%= @plugin_version %>/bin/handler-mailer.rb",
			"filters": ["occurrences","filter_onlyproduction_afterhours"]
		}
	},
  "mailer": {
		"mail_from": "<%= @email_from %>",
		"mail_to": <%= @email %>,
		"smtp_address": "localhost",
		"smtp_port": 25,
		"admin_gui": "https://<%= @sensu_server %>"
	}
}